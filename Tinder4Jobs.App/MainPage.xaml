        <StackPanel Grid.Row="2" Background="#FFF6F6F2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal" >
            <Button x:Name="button"
                    Width="100"
                    Height="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="#FFD4D4D4"
                    Canvas.ZIndex="100"
                    Command="{Binding RejectUserCommand,
                                      Mode=OneWay}"
                    Style="{StaticResource RoundButtonStyle}">
                <TextBlock Margin="0,0,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource PhoneFontFamilyNormal}"
                           FontSize="64"
                           Foreground="#FFB6B6B6"
                           Text="X"
                           TextWrapping="Wrap" />
            </Button>
            <Button Width="75"
                    Height="75"
                    Margin="-29,0,-20,2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    BorderBrush="#FFD4D4D4"
                    BorderThickness="3"
                    Foreground="#FFA4A4A4"
                    Style="{StaticResource InfoButtonStyle}"
                    Click="btnInfo" >
                <Image Width="70"
                       Height="70"
                       Margin="0,0,0,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Source="Assets/Images/i.png"
                       Stretch="Fill" />
            </Button>
            <Button Width="100"
                    Height="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="#FFD4D4D4"
                    Canvas.ZIndex="100"
                    Command="{Binding LikeUserCommand,
                                      Mode=OneWay}"
                    Style="{StaticResource LikeButtonStyle}">
                <Image Width="75"
                       Height="75"
                       Margin="0,0,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Source="Assets/Images/Heart.png"
                       Stretch="Fill" />
            </Button>
        </StackPanel>

        <!--</Grid>-->
        <ScrollViewer x:Name="LeftSideBar" 
                      Visibility="Visible"
                      Grid.Row="0"
                      Grid.RowSpan="3"
                      Width="320"
                      HorizontalAlignment="Left"
                      Background="#FF272727"
                      Foreground="#DEFFFFFF"
                      RenderTransformOrigin="0.5,0.5" 
                      Tapped="LeftSideBar_Tapped"
                      Canvas.ZIndex="6"
                      >

            <ScrollViewer.RenderTransform>
                <CompositeTransform TranslateX="-320" x:Name="LeftBarTransform" />
            </ScrollViewer.RenderTransform>
            <StackPanel Margin="24,36,0,0" Canvas.ZIndex="0">
                <Button Margin="0,0,0,24"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                BorderBrush="Transparent"
                                                Content="Home"
                                                HorizontalContentAlignment="Left"
                                                Foreground="White" 
                                                 Style="{StaticResource MainMenuButton}"
                                               Click="btnHome" >
                    <Button.Background>
                        <ImageBrush ImageSource="Assets/Images/Map_Pin.png" Stretch="UniformToFill" />
                    </Button.Background>
                </Button>
                <Button x:Name="profileButton"
                                                Margin="0,0,0,24"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                BorderBrush="#DEFFFFFF"
                                                Content="Profile"
                                                Foreground="#DEFFFFFF"
                                                Style="{StaticResource ProfileButtonStyle}"
                                                Visibility="Visible" 
                        Click="btnProfile">
                    <Button.Background>
                        <ImageBrush ImageSource="Assets/Images/status.png" Stretch="UniformToFill" />
                    </Button.Background>

                </Button>

                <Button Margin="0,0,0,24"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                BorderBrush="#DEFFFFFF"
                                                Content="Jobs"
                                                Foreground="#DEFFFFFF"
                                                Style="{StaticResource MainMenuButton}"
                                                Visibility="Visible"
                        Click="btnJobList">
                    <Button.Background>
                        <ImageBrush ImageSource="Assets/Images/spanner.png" Stretch="UniformToFill" />
                    </Button.Background>


                </Button>
                <Button x:Name="settingsButton"
                                                Margin="0,0,0,24"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                BorderBrush="#DEFFFFFF"
                                                Content="Settings"
                                                Foreground="#DEFFFFFF"
                             Style="{StaticResource MainMenuButton}"
                                                Visibility="Collapsed">
                    <Button.Background>
                        <ImageBrush ImageSource="Assets/Images/Spanner.png" Stretch="UniformToFill" />
                    </Button.Background>
                </Button>
                <HyperlinkButton x:Name="privacyPolicy"
                                                         Margin="0,12,0,0"
                                                         HorizontalAlignment="Left"
                                                         VerticalAlignment="Top"
                                                         Content="Privacy Policy"
                                                         Foreground="#DEFFFFFF" 
                                     FontSize="{StaticResource TextStyleLargeFontSize}"/>
            </StackPanel>
        </ScrollViewer>
        <Border x:Name="Overlay"
             Grid.RowSpan="3"
            Grid.Row="0"
            Background="#7F000000"
            BorderBrush="Black"
            BorderThickness="1"
            Visibility="Collapsed"
                Canvas.ZIndex="0">
        </Border>
      
