    <Grid Width="Auto" Background="#FFF6F6F2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <Grid Height="65"
            VerticalAlignment="Top"
            Background="White"
