<Page
    x:Class="PrototypeTinder4Jobs.Profile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PrototypeTinder4Jobs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <SolidColorBrush x:Key="ImageBorderBrush" Color="#FFA4A4A4" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Height="680"
                VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
                BorderBrush="{StaticResource ImageBorderBrush}"
                BorderThickness="2"
                CacheMode="BitmapCache"
                RenderTransformOrigin="0.5,0.5" 
                
            ManipulationMode="System">
            <Border.RenderTransform>
                <CompositeTransform x:Name="transform" TranslateX="0" />
            </Border.RenderTransform>
            <Border.Background>
                <ImageBrush ImageSource="/Assets/Images/linkedin6.png" Stretch="Fill" />
            </Border.Background>
            <StackPanel Margin="12,10,10,10"
                                VerticalAlignment="Stretch"
                                Orientation="Vertical"
                                    Grid.Row="0">
                <!--<Border x:Name="ClientArea" Background="White">
                                <Grid HorizontalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                </Grid>
                            </Border>-->


                <TextBlock TextWrapping="Wrap" 
                               Text="Name" 
                               Foreground="White" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               FontSize="17" 
                               Margin="0,0,0,-5" 
                               FontWeight="Bold"/>
                <Border BorderBrush="Gray" 
                                    BorderThickness="1" 
                                    Margin="0,5,5,5" 
                                     Opacity="10"
                                    Background="#DDFBFBFD"
                                      CornerRadius="15,15,15,15">
                    <TextBlock Height="45"
                                   HorizontalAlignment="Stretch"
                                   Foreground="Black"
                                       FontSize="15"
                                       Padding="10"
                                   Text="123232"
                                           Opacity="30"
                                     TextWrapping="Wrap" Margin="0.167,0,0,0" />
                </Border>
                <TextBlock TextWrapping="Wrap" 
                               Text="Title" 
                               Foreground="White" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               FontSize="17" 
                               Margin="0,0,0,-5" 
                               FontWeight="Bold"/>
                <Border 
                                BorderBrush="Gray" 
                                BorderThickness="1" 
                                Margin="5,5,5,5"
                                 Opacity="20" 
                                Background="#DDFBFBFD"
                                  CornerRadius="15,15,15,15">
                    <TextBlock Height="50"
                                   HorizontalAlignment="Stretch"
                                   Foreground="Black"
                                       FontSize="15"
                                       Padding="10"
                                   Text="Location XYZ"
                                   TextWrapping="Wrap" 
                                           
                                           />
                </Border>
                <TextBlock TextWrapping="Wrap" 
                               Text="Url" 
                               Foreground="White" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               FontSize="17" 
                               Margin="0,0,0,-5" 
                               FontWeight="Bold"/>
                <Border 
                                BorderBrush="Gray" 
                                BorderThickness="1" 
                                Margin="5,5,5,5"
                                 Opacity="20" 
                                Background="#DDFBFBFD"
                                  CornerRadius="15,15,15,15">
                    <TextBlock Height="50"
                                   HorizontalAlignment="Stretch"
                                   Foreground="Black"
                                       FontSize="15"
                                       Padding="10"
                                   Text="Job poster XXX"
                                   TextWrapping="Wrap" 
                                           
                                           />
                </Border>
                <Border BorderBrush="Gray" 
                                    BorderThickness="1" 
                                    Margin="5,5,5,5"
                                    Background="#DDFBFBFD" Opacity="0.99"
                                      CornerRadius="15,15,15,15"
                              />

            </StackPanel>

        </Border>
    </Grid>
</Page>

